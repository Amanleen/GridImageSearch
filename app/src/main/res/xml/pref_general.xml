<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="image_size_key"
        android:title="@string/image_size_title"
        android:defaultValue="icon"
        android:entries="@array/image_size_list_titles"
        android:entryValues="@array/image_size_list_titles"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="color_filter_key"
        android:title="@string/color_filter_title"
        android:defaultValue="black"
        android:entries="@array/color_filter_list_titles"
        android:entryValues="@array/color_filter_list_titles"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="image_type_key"
        android:title="@string/image_type_title"
        android:defaultValue="face"
        android:entries="@array/image_type_list_titles"
        android:entryValues="@array/image_type_list_titles"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />



    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="site_filter_key"
        android:title="@string/site_filter_title"
        android:defaultValue="@null"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />



</PreferenceScreen>
